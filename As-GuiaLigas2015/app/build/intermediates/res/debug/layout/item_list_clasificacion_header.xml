<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teamContent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_clasification_background"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/groupNameContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/groupNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/size_item_list_clasificacion_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/teamText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_team"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/puntosText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_puntos"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partJugText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_partigosjugados"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partGanText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_partidos_ganados"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partEmpText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_partidos_empatados"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partPerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_partidos_perdidos"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/golesFavText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_goles_favor"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/golesContText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:text="@string/clasificacion_goles_contra"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/size_item_list_clasificacion_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gapBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dip"
        android:background="@color/clear_gray"
        android:contentDescription="@string/defualt" />

</LinearLayout><!-- From: file:/Users/ahernama/Documents/git/as-guialiga-android/As-GuiaLigas2015/app/src/main/res/layout/item_list_clasificacion_header.xml -->