<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teamContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp" >

    <RelativeLayout
        android:id="@+id/playerImagesContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:background="@drawable/foto_plantilla_generica"
            android:contentDescription="@string/defualt"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:background="@drawable/borde_circulo_plantilla"
            android:contentDescription="@string/defualt"
            android:scaleType="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dorsalContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-7dp"
        android:layout_toLeftOf="@+id/playerImagesContent" >

        <ImageView
            android:id="@+id/dorsalImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/circulo_dorsal"
            android:contentDescription="@string/defualt"
            android:scaleType="center" />

        <TextView
            android:id="@+id/playerDorsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_carrusel_playerDorsal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-7dp"
        android:layout_toRightOf="@+id/playerImagesContent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/changeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/plantilla_cambio"
            android:contentDescription="@string/defualt"
            android:scaleType="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/golContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerImagesContent"
        android:layout_marginRight="-7dp"
        android:layout_marginTop="-15dp"
        android:layout_toLeftOf="@+id/playerImagesContent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/golImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/plantilla_gol"
            android:contentDescription="@string/defualt"
            android:scaleType="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tarjetaContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerImagesContent"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="-15dp"
        android:layout_toRightOf="@+id/playerImagesContent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/tarjetaImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/plantilla_amarilla"
            android:contentDescription="@string/defualt"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerImagesContent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/size_carrusel_playerName" />

</RelativeLayout><!-- From: file:/Users/ahernama/Documents/git/as-guialiga-android/As-GuiaLigas2015/app/src/main/res/layout/item_grid_carrusel_player.xml -->