<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teamContent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/positionImage"
            android:layout_width="6dp"
            android:layout_height="fill_parent"
            android:contentDescription="@string/defualt" />

        <RelativeLayout
            android:id="@+id/shieldContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="2dp" >

            <RelativeLayout
                android:id="@+id/teamInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/shieldImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/defualt" />

                <TextView
                    android:id="@+id/teamPositionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/shieldImage"
                    android:lines="1"
                    android:textColor="@color/gray_clasification"
                    android:textSize="@dimen/size_item_list_clasificacion_26" />
            </RelativeLayout>

            <TextView
                android:id="@+id/teamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamInfo"
                android:layout_centerHorizontal="true"
                android:gravity="center|center_vertical"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/size_item_list_clasificacion_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/puntosText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partJugText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partGanText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partEmpText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/partPerText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/golesFavText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />

        <TextView
            android:id="@+id/golesContText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_item_list_clasificacion_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gapBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dip"
        android:background="@color/clear_gray"
        android:contentDescription="@string/defualt" />

</LinearLayout><!-- From: file:/Users/ahernama/Documents/git/as-guialiga-android/As-GuiaLigas2015/app/src/main/res/layout/item_list_clasificacion.xml -->