<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" >

                <ImageView
                    android:id="@+id/title_menuIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/defualt" />
                <!-- android:background="@drawable/sliding_logo_ligabbva" -->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/localContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/localShield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/escudo_generico_size02"
                        android:contentDescription="@string/defualt" />

                    <TextView
                        android:id="@+id/localTeamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/localShield"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_calendar_big" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/awayContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/awayShield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/escudo_generico_size02"
                        android:contentDescription="@string/defualt" />

                    <TextView
                        android:id="@+id/awayTeamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/awayShield"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_calendar_big" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/postMatchButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/button_team_noticias"
                android:gravity="center"
                android:onClick="buttonClick"
                android:tag="302"
                android:text="@string/carrusel_post_match_button"
                android:textSize="@dimen/size_fragment_player_19" />

            <ImageView
                android:id="@+id/gapBarTvs"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/clear_gray"
                android:contentDescription="@string/defualt" />

            <RelativeLayout
                android:id="@+id/tvContainerAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/clear_gray"
                android:contentDescription="@string/defualt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/jornadaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_calendar_16" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jornadaName"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:textColor="@color/gray_carrusel_resumen"
                    android:textSize="@dimen/size_calendar_16" />

                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateText"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_calendar_16" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/clear_gray"
                android:contentDescription="@string/defualt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/refereeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_calendar_16" />

                <ImageView
                    android:id="@+id/refereeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/refereeName"
                    android:background="@drawable/icn_silbato_arbitro"
                    android:contentDescription="@string/defualt" />
            </RelativeLayout>

            <!-- <ImageView -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="2dp" -->
            <!-- android:layout_marginLeft="10dp" -->
            <!-- android:layout_marginRight="10dp" -->
            <!-- android:background="@color/clear_gray" -->
            <!-- android:contentDescription="@string/defualt" /> -->

            <LinearLayout
                android:id="@+id/golesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/clear_gray"
                    android:contentDescription="@string/defualt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <ImageView
                        android:id="@+id/golIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icn_goles"
                        android:contentDescription="@string/defualt" />

                    <TextView
                        android:id="@+id/golText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/golIcon"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:text="@string/carrusel_gol"
                        android:textColor="@color/gray_carrusel_resumen"
                        android:textSize="@dimen/size_calendar_14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/golesContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tarjetasAmarillasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/clear_gray"
                    android:contentDescription="@string/defualt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <ImageView
                        android:id="@+id/tarjetaAmIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icn_amarillas"
                        android:contentDescription="@string/defualt" />

                    <TextView
                        android:id="@+id/tarjetaAmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tarjetaAmIcon"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:text="@string/carrusel_tarjeta_amarillas"
                        android:textColor="@color/gray_carrusel_resumen"
                        android:textSize="@dimen/size_calendar_14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tarjetasAmarillasContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tarjetasRojasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/clear_gray"
                    android:contentDescription="@string/defualt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <ImageView
                        android:id="@+id/tarjetaRoIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icn_rojas"
                        android:contentDescription="@string/defualt" />

                    <TextView
                        android:id="@+id/tarjetaRoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tarjetaRoIcon"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:text="@string/carrusel_tarjeta_rojas"
                        android:textColor="@color/gray_carrusel_resumen"
                        android:textSize="@dimen/size_calendar_14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tarjetasRojasContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>