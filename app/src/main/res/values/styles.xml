<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MyAppCompatDark" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.MyAppCompat" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="actionBarSize">@dimen/size_actionbar</item>
        <item name="actionMenuTextAppearance">@style/CustomMenuTextApearance</item>
        <item name="actionMenuTextColor">@color/red</item>
        <item name="android:textAppearance">@style/CustomMenuTextApearance</item>
        <item name="actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="background">@drawable/header01</item>
        <item name="android:background">@drawable/header01</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/size_actionbar</item>
        <item name="height">@dimen/size_actionbar</item>
        <item name="icon">@drawable/ico_logo_navbar</item>
        <item name="android:icon">@drawable/ico_logo_navbar</item>
        <item name="titleTextStyle">@style/CustomTitleActionBar</item>
        <item name="actionMenuTextColor">@color/red</item>
        <item name="android:textSize">@dimen/size_actionbar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">@style/CustomMenuTextApearance</item>
        <item name="android:textAppearance">@style/CustomMenuTextApearance</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextApearance</item>
    </style>

    <style name="CustomTitleActionBar" parent="TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textColorHighlight">@color/red</item>
        <item name="android:textColorLink">@color/red</item>
        <item name="android:height">@dimen/size_item_actionbar</item>
        <item name="android:textSize">@dimen/size_item_actionbar_text</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="CustomMenuTextApearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/size_item_actionbar</item>
        <item name="android:textSize">@dimen/size_item_actionbar_text</item>
    </style>

    <style name="team_gap_bar_dark">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:layout_marginBottom">10dip</item>
        <!-- <item name="android:layout_marginLeft">10dp</item> -->
        <!-- <item name="android:layout_marginRight">10dp</item> -->
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="team_gap_bar_light">
        <item name="android:background">@color/clear_gray</item>
        <item name="android:layout_marginBottom">8dip</item>
        <!-- <item name="android:layout_marginLeft">15dp</item> -->
        <!-- <item name="android:layout_marginRight">15dp</item> -->
        <item name="android:layout_marginTop">8dip</item>
    </style>

    <style name="subtitleStyle">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_subtitle</item>
    </style>

    <style name="subtitleStyleGray">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textSize">@dimen/size_subtitle</item>
    </style>

</resources>